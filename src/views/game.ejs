<html>
<head>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
    </script>
</head>
<style>
    .total_container {
        display: flex;
        justify-content: center;
        margin: 30px;
    }

    .left_container {
        display: flex;
        flex-direction: column;

        width: 40vw;
        height: 90vh;
        margin-right: 5vw;
    }

    .status_container {
        display: flex;
        align-items: center;
        justify-content: space-around;

        width: 100%;
        height: 30%;
        margin-bottom: 20px;
        padding: 15px;

        border: 2px solid;
        border-radius: 10px;
    }

    .status {
        display: flex;
        flex-direction: column;
    }

    .reset-btn {
        margin-top: 10px;
        padding: 5px;
        background-color: yellowgreen;
        border-radius: 10px;
        text-align: center;
        font-weight: 600;

        cursor: pointer;
    }

    .inventory_container {
        width: 100%;
        height: 30%;
        padding: 15px;
        border: 2px solid;
        border-radius: 10px;

    }

    .inventory {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        margin-left: 20px;
        height: 70%;
    }

    .item {
        margin-bottom: 2px
    }

    .display-container {
        width: 100%;
        height: 30%;

        padding: 15px;

        border: 2px solid;
        border-radius: 10px;
        margin-top: 20px;

        overflow: auto;
    }

    .right-container {
        display: flex;
        flex-direction: column;

        width: 40vw;
        height: 90vh;
    }

    .map-container {
        width: 100%;
        min-width: 500px;
        height: 60vh;

        border: 2px solid;
        border-radius: 10px;
        margin-bottom: 10px;

        font-size: 30px;
        text-align: center;
        padding-top: 40px;

        overflow: auto;
    }

    .map-description {
        margin-bottom: 30px;
        font-size: 20px;
        font-weight: 600;
        /* color: blueviolet; */
    }

    .action-container {
        display: flex;

        width: 100%;
        height: 30vh;
    }

    .direction_container {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;

        width: 60%;
        height: 30vh;

        border: 2px solid;
        border-radius: 10px;

        margin-right: 10px;
    }

    .attack-run-container {
        display: flex;
        flex-direction: column;
        justify-content: space-around;

        width: 40%;
        text-align: center;
        font-weight: 600;
        font-size: 25px;
    }

    .attack-btn {
        padding: 7px;
        background-color: coral;
        border-radius: 10px;
        cursor: pointer;
    }

    .run-btn {
        padding: 7px;
        background-color: red;
        border-radius: 10px;
        cursor: pointer;
    }

    .ending-btn {
        padding: 7px;
        background-color: rgb(216, 219, 11);
        border-radius: 10px;
        cursor: pointer;
    }

    .title {
        text-align: center;
        font-weight: 600;
        font-size: 25px;
        margin-bottom: 15px;
    }

    .left-right-direction {
        display: flex;
    }

    .direction {
        font-size: 60px;
    }

    .move-btn {
        cursor: pointer;
        padding: 15px;
        font-size: 25px;
    }

    .hide {
        visibility: hidden;
    }

</style>
<body>
<div class="total_container">
    <div class="left_container">
        <div class="status_container">
            <div class="profile">
                <img id="profile-img"
                     width="100%"
                     height="100%"
                />
            </div>
            <div class="status">
                <div class="class title">Status</div>
                <div id="level"></div>
                <div id="hp"></div>
                <div id="str"></div>
                <div id="def"></div>
                <div id="exp"></div>
                <div class="reset-btn">능력치 재설정</div>
            </div>
        </div>
        <div class="inventory_container">
            <div class="inventory_title title">Inventory</div>
            <div class="inventory"></div>
        </div>
        <div class="display-container">
            <div class="display_title title">대화창</div>
            <div class="display_content">
                <div class="display_event" style="margin-bottom: 10px;"></div>
                <div class="display_event_line"></div>
            </div>
        </div>
    </div>
    <div class="right-container">
        <div class="map-container">
            <div class="map-description"></div>
            <div class="map"></div>
        </div>
        <div class="action-container">
            <div class="direction_container">
                <div class="upper_direct_container direction">
                    <button dir="3" class='move-btn'>▲</button>
                </div>
                <div class="left-right-direction">
                    <div class="left_direct_container direction" style="margin-right: 100px;">
                        <button dir="1" class='move-btn'>◀</button>
                    </div>
                    <div class="right_direct_container direction">
                        <button dir="0" class='move-btn'>▶</button>
                    </div>
                </div>
                <div class="lower_direct_container direction">
                    <button dir="2" class='move-btn'>▼</button>
                </div>
            </div>
            <div class="attack-run-container">
                <div class="attack-btn hide">공격하기</div>
                <div class="run-btn hide">도망치기</div>
                <div class="ending-btn hide">엔딩보기</div>
            </div>
        </div>
    </div>
</div>
<audio id="music">음악 재생</audio>

<script type="module">
    import {handleAction} from '../front/handleAction.js';

    const key = localStorage.getItem('_key');
    if (!key) location.href = "/"

    const reset = $('.reset-btn');
    reset.click(() => {
        handleAction('reset', 'GET');
    })

    const move = $('.move-btn');
    for (const dom of move) {
        const domDirection = dom.attributes.dir.value;
        dom.onclick = () => handleAction('move', 'POST', {direction: domDirection});
    }

    const attack = $('.attack-btn');
    attack.click(() => {
        handleAction('attack', 'GET');
    })

    const run = $('.run-btn');
    run.click(() => {
        handleAction('run', 'GET');
    })

    const ending = $('.ending-btn');
    ending.click(() => {
        handleAction('ending', 'GET');
    })

    handleAction('view', 'GET');

</script>
<div>
</div>
</body>
</html>

