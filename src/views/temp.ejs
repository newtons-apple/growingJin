    <script type="module">
        import { handleMove, handleAttack, handleRun, handleEnding } from '../front/handleAction.js';

        const key = localStorage.getItem('_key');
        if (!key) location.href = "/";

        const sendAction = (url, params = {}) => {
            $.ajax({
                url,
                headers: {
                Authorization: "Bearer " + key
                },
                method: "POST",
                data: $.param(params),
            }).done((req) => {
                const { player, field, event, actions } = req;

                $('#game').text(field.description);
                $('#position').text(`(${field.x},${field.y})`);
                const x = field.x;
                const y = field.y;

                $('#control').html('');
                req.actions.forEach((action) => {
                    const dom = $('<button></button');
                    dom.text(action.text);
                    dom.bind('click', function () {
                        sendAction(action.url, action.params);
                    });

                    $('#control').append(dom);
                })

                if (event) {
                    $('#event_result').text(event.description);
                    } else {
                    $('#event_result').text("아무일도 일어나지 않았다.");
                }

                $('#HP').text(`${player.HP} / ${player.maxHP}`)
            });
        } 

        sendAction("/action", {action: 'query'});

        const move = $('.move-btn');
        for(const dom of move){
            const domDirection = dom.attributes.dir.value;
            dom.onclick = () => handleMove(domDirection);
        }

        const attack = $('.attack-btn');
        attack.click(() => {
            handleAttack(key);
        })

        const run = $('.run-btn');
        run.click(() => {
            sendAction('/run');
        })

        const ending = $('.ending-btn');
        ending.click(() => {
            sendAction('/ending');
        })

        const makeMap = (x, y, level) => {
            const canGoHeight = {'1': [0, 0], '2': [1, 2], '3': [3, 5], '4': [6, 9]};
            let map = '';
            const canGoLine = "□ ".repeat(10) + "<br/>";
            const nowLine = "□ ".repeat(x) + "■ " + "□ ".repeat(9 - x) + "<br/>";
            const canNotGoLine = "▧ ".repeat(10) + "<br/>";
            const [bottom, top] = canGoHeight[level];

            for (let i = 9; i >= 0; i--){
                if (i > top || i < bottom) map += canNotGoLine;
                else if (y === i) map += nowLine;
                else map += canGoLine;
            }
            return map;
        }

        $('.map').html(makeMap(2,2,2));
    </script>
